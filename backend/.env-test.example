# 火山引擎API配置
VOLCENGINE_ACCESS_KEY=your_access_key_here
VOLCENGINE_SECRET_KEY=your_secret_key_here
VOLCENGINE_REGION=cn-beijing

# 火山引擎大模型API配置 (用于LLM服务)
VOLCENGINE_API_KEY=your_api_key_here

# 火山引擎应用配置 (用于语音服务)
VOLCENGINE_APP_ID=your_app_id_here

# 大模型端点配置 (格式: ep-xxxxxxxxx-xxx)
VOLCENGINE_ENDPOINT_ID=your_endpoint_id_here

# n8n配置
N8N_WEBHOOK_URL=http://localhost:5678/webhook/your-webhook-id

# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=True

# 日志配置
LOG_LEVEL=INFO

# 前端CORS配置
FRONTEND_URL=http://localhost:3000

# 音频配置
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024

# 模型配置
DEFAULT_LLM_MODEL=doubao-pro-32k
DEFAULT_TTS_VOICE=zh_female_tianmei

# WebSocket配置
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTION_TIME=3600

# 安全配置
SECRET_KEY=your-secret-key-for-jwt
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 缓存配置
REDIS_URL=redis://localhost:6379/0
CACHE_EXPIRE_TIME=3600

# 数据库配置（如果需要）
DATABASE_URL=sqlite:///./echoflow.db

# 开发环境配置
DEVELOPMENT_MODE=True
ENABLE_MOCK_SERVICES=False